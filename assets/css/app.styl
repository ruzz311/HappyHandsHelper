@import nib

$pink       = #FFB3B3
$red        = #ff0000
$grey       = grey


#primary_nav
    .navbar-inner
        border-radius   0

.alert-heading
    margin-bottom       15px


#home
    h2
        text-align      center
        margin-bottom   50px

    .wrap
        width           60%
        margin          auto

    .btn
        width           40%
        display         block
        margin          auto
        font-size       1.5em

    .test_drive
        float           right

    .make
        float           left


#record
    
    h2
        text-align      center

    h2.code
        color           $grey
        span
            color       $red
            font-family Monaco, Menlo, Consolas, "Courier New", monospace

    #start, #stop, #restart
        display         block
        width           50%
        padding         20px
        margin          20px auto
        font-size       1.5em
        font-weight     bold

    #stop
        padding         120px 60px

    .recording, .complete
        display         none


#record.test_drive
    a
        font-size       1.5em
        margin-bottom   20px
        display         block


#listen

    .error
        display         none

    .records
        max-height      500px
        overflow        scroll

    input
        color           $red
        margin          20px auto
        font-size       1.5em
        display         block
        padding         15px 0 10px
        text-align      center
        font-weight     bold
        width           33%

    input::placeholder, input::-webkit-input-placeholder
        color           $pink

    .btn
        width           30%
        display         block
        margin          auto
        font-size       1.5em

    .recording, .complete
        display         none

    #restart
        margin-top      20px

    #arr_dump
        height          150px
        font-size       .75em
        overflow        scroll
        word-wrap       break-word
        border-radius   5px
        border          1px solid #E3E3E3
        background-color white

    #clip_container
        opacity         0
        position        relative
        text-align      right
        font-weight     bold

    #clip_button
        float           right
        width           40px
        height          40px
        background      url('/img/clipboard.png') no-repeat
        background-size contain

#listen.test_drive

    h2
        font-size       10em
        text-align      center
        margin-top      20%
        transition      all .1s linear

    h2.bounce
        font-size       15em
        color           red

    .listening
        display         none
        

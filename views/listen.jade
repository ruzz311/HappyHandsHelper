extends layout

block head
    script(src='/socket.io/socket.io.js')
    script(src='js/ZeroClipboard.min.js')
    != js('listen')


block navigation
    include navbar

block content

    #listen

        .alert.error.alert-error.wrapper
            a.close(href='#', type='button', data-dismiss='alert') x
            h4.alert-heading Error
            p.message

        .before.wrapper

            input#secret(placeholder='Enter 4 Digit Code')
            a#start.btn.btn-success.btn-large(href='#') Start Listening

        .recording.wrapper
            h2 Listening...

            .well
                h4 Your Records:
                .records
                    table.table.table-striped
                        thead
                            tr
                                th Alpha
                                th Beta
                                th Gamma
                                th X
                                th Y
                                th Z
                        tbody#dump
                        thead
                            tr
                                th Alpha
                                th Beta
                                th Gamma
                                th X
                                th Y
                                th Z

                #arr_dump

        #clip_container
            p Copy to Clipboard
            #clip_button